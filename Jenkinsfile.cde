        sh "mkdir -p /tmp/jenkins_workspaces"
        sh "chmod -R 777 /tmp/jenkins_workspaces"
        ws("/tmp/jenkins_workspaces/planty-assistant-agent") {
            docker.image('artifactory.topdanmark.local:5001/jenkins/slave:latest-jdk11').inside('-v $HOME/.m2:/root/.m2 -v /tmp/jenkins_workspaces:/tmp/jenkins_workspaces -u 0:0') {
